<FlatButton@ButtonBehavior+Label>:
  font_size: 14
<OperatorWindow>:
  id: main_win
  orientation:"vertical"
  canvas.before:
    Color:
      rgba: (1,.05,1,.06)
    Rectangle:
      size:self.size
      pos:self.pos

  BoxLayout:
    id:header
    height:40
    size_hint_y:None
    canvas.before:
      Color:
        rgba: (.06,.45,.45,1)
      Rectangle:
        size:self.size
        pos:self.pos
    Label:
      text: "Testimony POS System"
      size_hint_x:.9
      bold:True
      color:(1,1,1,1)
    Label:
      id:loggedin_user
      text: "IPdo"
      color:(1,1,1,1)

  BoxLayout:
    id: current
    size_hint_y: None
    height: 50
    canvas.before:
  
      Color:
        rgba:(1,1,1,1)
      Rectangle:
        size:self.size
        pos:self.pos
    Button:
      text: "Current_item"
      background_normal:""
      background_color:(.06,.32,.32,1)
    Button:
      id:cur_product       
      text: "Current"
      background_normal:""
      background_color:(.06,.4,.4,1)
    Button:
      id:cur_price
      text: "0.00"
      background_normal:""
      background_color:(.06,.65,.65,1)
      size_hint_x: .2
  BoxLayout:
    padding: 10
    BoxLayout:
      id:product_details
      orientation: "vertical"
      size_hint_x: .8
      spacing: 10
      BoxLayout:
        id:Product_labels
        size_hint_y: None
        height: 40
        canvas.before:
          Color:
            rgba:(.06,.45,.45,1)
          Rectangle:
            size:self.size
            pos:self.pos
        FlatButton:
          text: "Qty"
          size_hint_x: .1
        FlatButton:
          text: "Product_Code"
          size_hint_x: .3
        FlatButton:
          text: "Disc"
          size_hint_x: .1
        FlatButton:
          text: "Disc%"
          size_hint_x: .1
        FlatButton:
          text: "Price"
          size_hint_x: .1
        FlatButton:
          text: "VAT"
          size_hint_x: .1
        FlatButton:
          text: "Product_Total"
          size_hint_x: .2
      BoxLayout: 
        id:Product_inputs
        size_hint_y: None
        height: 30
        spacing:5
        TextInput:
          id:qty_inp
          size_hint_x: .1
          multiline: False
        TextInput:
          id:code_inp
          size_hint_x: .3
          multiline: False
          on_text_validate: root.update_purchases()
        TextInput:
          id:disc_inp
          size_hint_x: .1
          multiline: False
        TextInput:
          id:disc_perc_inp
          size_hint_x: .1
          multiline: False
        TextInput:
          id:vat_inp
          size_hint_x: .1
          multiline: False
        TextInput:
          id:price_inp
          size_hint_x: .1
          multiline: False
        TextInput:
          id:total_inp
          size_hint_x: .2
          multiline: False
         
      BoxLayout: 
        id:add_to_cart
        orientation: "vertical"
        BoxLayout:
          size_hint_y: None
          height:30
          canvas.before:
            Color:
              rgba:(.06,.45,.45,1)
            Rectangle:
              size:self.size
              pos:self.pos
          
          Label:
            text: "Code"
            size_hint_x: .1
          Label:
            text: "Product Name"
            size_hint_x: .2
          Label:
            text: "Qty"
            size_hint_x: .2
          Label:
            text: "Disc"
            size_hint_x: .1
          Label:
            text: "Price"
            size_hint_x: .2
          Label:
            text: "Product Total"
            size_hint_x: .3
        
        GridLayout:
          id:Products
          cols: 1
    BoxLayout:
      id:preview
      orientation: "vertical"
      size_hint_x: .2

      TextInput:
        id:recipt_preview
        readonly: True
        text: "Testimony Generals\n123 Main St\nKnowhere, Space\n\nTel: (555) -123 -456\nReceipt No: \nDate: \n\n"
  BoxLayout:
    id: footer
    size_hint_y: None
    height:30
    canvas.before:
      Color:
        rgba:(.06,.45,.47,1)
      Rectangle:
        pos: self.pos
        size: self.size
    Label:
      text: "Maintained by @ikanyip"


    